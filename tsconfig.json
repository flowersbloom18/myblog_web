{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,// 允许编译js文件
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true
  },
    "include": ["src/**/*", "src/**/*.vue"],
//  "include": [
//    "src/**/*.ts",
//    "src/**/*.d.ts",
//    "src/**/*.tsx",
//    "src/**/*.vue"
//  ],
  "exclude": [
    "node_modules"
  ]
}
